<% include partials/header %>

<div class="register">

	<h1 class="d-flex justify-content-center" style="color: white; text-align: center; padding: 8px;">
		Give Feedback about Interview Experience
	</h1>
	<div class=row>
		<form action="/movies/feedback/<%=offerID %>" class="mx-auto" method="POST">
			<div class="form-group">
				<input class="form-control " type="text" name="feedback" placeholder="Your feedback" required>
			</div>
			<div class="form-group">
				<input class="form-control " type="text" name="rating" placeholder="Rate Your experience out of 5" required>
			</div>
			<div class="form-group">
				<input class="form-control " type="text" name="suggestions" placeholder="Your suggestions" required>
			</div>
			
			<div class="form-group">
				<input class="btn  form-control btn-primary" type="submit">
			</div>
			<a href="/movies">Go Back </a>
		</form>
	</div>
	
</div>

<% include partials/footer %>